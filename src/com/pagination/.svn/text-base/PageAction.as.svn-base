package com.pagination
{
	/**
	 * paging function class
	 */
	public class PageAction
	{
			import com.pagination.PageHelper;
			/**
			 * trigger this function when click first button
			 * 
			 * @param _page
		 	 * @return
			 */
			public static function firstAction(_page:PageHelper):void{
				_page.first();
				_page.setDataProvider();
			}
			/**
			 * trigger this function when click previos button
			 * 
			 * @param _page
		 	 * @return
			 */
			public static function previousAction(_page:PageHelper):void{
				_page.previous();
				_page.setDataProvider();
			}
			/**
			 * trigger this function when click next button
			 * 
			 * @param _page
		 	 * @return
			 */
			public static function nextAction(_page:PageHelper):void{
				_page.next();
				_page.setDataProvider();
			}
			/**
			 * trigger this function when click last button
			 * 
			 * @param _page
		 	 * @return
			 */
			public static function lastAction(_page:PageHelper):void{
				_page.last();
				_page.setDataProvider();
			}
			/**
			 * trigger this function when refresh
			 * 
			 * @param _page
		 	 * @return
			 */
			public static function refreshAction(_page:PageHelper):void{
				_page.refresh();
				_page.setDataProvider();
			}

	}
}