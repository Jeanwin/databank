package com.ganttBean
{
	/**
	 * gantt stage function class
	 */
	public class GanttStage
	{
		public var _startYear:int;		//gantt stage start year
		public var _startMouth:int;		//gantt stage start month
		public var _startDay:int;		//gantt stage start day
		public var _endYear:int;		//gantt stage end year
		public var _endMouth:int;		//gantt stage end month
		public var _endDay:int;			//gantt stage end day
		public var _stageName:String;	//gantt stage name
		public var _dayAmount:int;
		/**
		 * Constructor
		 * 
		 * @param startYear
		 * @param startMouth
		 * @param startDay
		 * @param endYear
		 * @param endMouth
		 * @param endDay
		 * @param stageName
 	     * @return 
		 */
		public function GanttStage(startYear:int,startMouth:int,startDay:int,endYear:int,endMouth:int,endDay:int,stageName:String){
			_startYear = startYear;
			_startMouth = startMouth;
			_startDay = startDay;
			_endYear = endYear;
			_endMouth = endMouth;
			_endDay = endDay;
			_stageName = stageName;
		}
		
	}
}